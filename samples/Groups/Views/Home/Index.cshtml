@model IEnumerable<BrockAllen.MembershipReboot.Group>

@{
    ViewBag.Title = "Index";
}

<h2>Roles</h2>

@Html.ValidationSummary()

@if(Model.Any())
{
<ul>
    @foreach (var grp in Model)
    {
        <li>@using(Html.BeginForm("Delete", "Home"))
            {
                <input name="id" type="hidden"value="@grp.ID"  />
                <button>delete</button>
            }
            <label>Name:</label> @grp.Name (<label>Tenant:</label> @grp.Tenant)
            @using(Html.BeginForm("ChangeName", "Home"))
            {
                <input name="id" type="hidden"value="@grp.ID"  />
                <label>New Name:</label>
                <input name="name" />
                <button>change</button>
            }
        </li>
    }
</ul>
}
else
{
    <p>No Groups Defined</p>
}

@using (Html.BeginForm("Add", "Home"))
{
    <fieldset>
        <legend>New Group</legend>
        <p>
            <label>Name</label>
            <input name="name" />
        </p>
        <p>
            <button>Create</button>
        </p>
    </fieldset>
}